= form_for @map do |f|
  - if @map.errors.any?
    #error_explanation
      %h2= "#{pluralize(@map.errors.count, "error")} prohibited this map from being saved:"
      %ul
        - @map.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :game_id
    = f.number_field :game_id
  .field
    = f.label :type
    = f.text_field :type
  .actions
    = f.submit 'Save'
