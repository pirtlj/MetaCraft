= form_for @tile do |f|
  - if @tile.errors.any?
    #error_explanation
      %h2= "#{pluralize(@tile.errors.count, "error")} prohibited this tile from being saved:"
      %ul
        - @tile.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :type
    = f.text_field :type
  .field
    = f.label :x
    = f.number_field :x
  .field
    = f.label :y
    = f.number_field :y
  .actions
    = f.submit 'Save'
